<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:fd="com.googlecode.flexdock.components.*"
	xmlns:fw="com.googlecode.flexwork.components.*"
	xmlns:kapit="fr.kapit.*"
	layout="absolute"
	creationComplete="onCreationComplete();">

	<mx:Style source="css/dock.css"/>

	<mx:Script>
		<![CDATA[
			import mx.containers.*;
			import mx.controls.*;
			import mx.core.*;
			import mx.events.*;
			import mx.managers.*;

			private function onCreationComplete():void
			{

			}
		]]>
	</mx:Script>
	
	<kapit:KapInspect/>
	
	<mx:VBox width="100%" height="100%" backgroundColor="0xECE9D8" horizontalGap="5" verticalGap="5">
		
		<fd:StageWindow width="100%" height="100%">

			<fd:SplitWindow width="100%" height="100%" direction="horizontal">

				<fd:ViewWindow id="viewWindow" width="25%">
					<fd:SpriteView/>
					<fd:SpriteView/>
					<fd:SpriteView/>
				</fd:ViewWindow>

				<fd:SplitWindow width="75%">

					<fd:SplitWindow height="60%" direction="horizontal">

						<fd:ViewWindow id="viewWindow2" width="75%">
							<fd:SpriteView/>
							<fd:SpriteView/>
							<fd:SpriteView/>
						</fd:ViewWindow>

						<fd:ViewWindow width="25%">
							<fd:SpriteView/>
							<fd:SpriteView/>
						</fd:ViewWindow>

					</fd:SplitWindow>

					<fd:ViewWindow height="40%">
						<fd:SpriteView/>
						<fd:SpriteView/>
						<fd:SpriteView/>
						<fd:SpriteView/>
						<fd:SpriteView/>
					</fd:ViewWindow>

				</fd:SplitWindow>

			</fd:SplitWindow>

		</fd:StageWindow>

	</mx:VBox>

</mx:Application>
